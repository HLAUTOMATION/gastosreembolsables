@{
}


<div class="modal fade" id="BorrarPartialView-@Model.Id" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Borrar Solicitud</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="BorrarPartialView" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                    <input type="hidden" asp-route-Id="@Model.Id"/>
            <p>Estas seguro de borrar este perfile con ID @Model.Id ?</p>
            </div>
    
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary"  asp-controller="Perfiles" asp-action="BorrarPartialView" asp-route-Id="@Model.Id" >Confirmar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
                </form>
                
            </div>
            
        </div>
    </div>
</div>