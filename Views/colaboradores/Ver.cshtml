@model ColaboradorCreacionViewModel
@{
	ViewData["Title"]="Editar Colaborador";
}

<h1>Editar Colaborador</h1>
<h5>Editar un Colaborador </h5>


<form asp-action="Editar">
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="Id"/>

	<div class="mb-3">
		<label asp-for="Nombre" class="form-label"></label>
		<input asp-for="Nombre" class="form-control" readonly/>
		<span asp-validation-for="Nombre" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="IdPerfile" class="form-label"></label>
		<select asp-for="IdPerfile" asp-items="Model.perfiles"  class="form-control" disabled ></select>
		<span asp-validation-for="IdPerfile" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="Correo" class="form-label"></label>
		<input asp-for="Correo" class="form-control" readonly/>
		<span asp-validation-for="Correo" class="text-danger"></span>
	</div>


	<div class="mb-3">
		<label asp-for="FechaContrato" class="form-label"></label>
		<input asp-for="FechaContrato" class="form-control" readonly/>
		<span asp-validation-for="FechaContrato" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="IdTipoContrato" class="form-label"></label>
		<select asp-for="IdTipoContrato" asp-items="Model.tipocontratos"  class="form-control" disabled></select>
		<span asp-validation-for="IdTipoContrato" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Enviar</button>
	<a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

		@section Scripts{
			<partial name="_ValidationScriptsPartial" />
		}
