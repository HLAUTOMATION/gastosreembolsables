@model IEnumerable<Asignacion>
@{
	ViewData["Title"]="Asignaciones";
}

<h1>Asignaciones</h1>
<a asp-action="Crear" class="btn btn-primary mb-3">Crear</a>
<table class="table">
	<thead>
	<tr>
		<th scope="col">Colaborador</th>
		<th scope="col">Empresa</th>
		<th scope="col">Proyecto</th>
		<th scope="col">Accion</th>
	</tr>
	</thead>
	<tbody>
		@foreach (var asignacion in Model)
		{
			<tr>
				<td>@asignacion.IdColaborador</td>
				<td>@asignacion.IdEmpresa</td>
				<td>@asignacion.IdProyecto</td>
				<td>
					<span>
					<a class="btn-primary btn" asp-action="Editar" asp-route-Id="@asignacion.Id">
						<i class="bi-pencil-fill"></i></a>
					<a class="btn-secondary btn" asp-action="Borrar" asp-route-Id="@asignacion.Id">
						<i class="bi-trash-fill"></i></a>
					</span>
				</td>
			</tr>
		}

	</tbody>
</table>

