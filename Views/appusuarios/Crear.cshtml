
@model AppUsuarioCreacionViewModel
@{
	ViewData["Title"]="Crear Usuario";
	Layout="../Shared/_Layout.cshtml";
	
}

<h3>Crear Usuario</h3>



<form asp-action="Crear">
@*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@

	
	<div class="mb-3">
		<label asp-for="EmailUsuario" class="form-label"></label>
		<input asp-for="EmailUsuario" class="form-control" required/>
		<span asp-validation-for="EmailUsuario" class="text-danger"></span>
	</div>

@*	<div class="mb-3">
		<label asp-for="Password" class="form-label"></label>
		<input asp-for="Password" class="form-control"/>

	</div>

	<div class="mb-3">
		<label asp-for="ConfirmPassword" class="col-md-2"></label>
		<input asp-for="ConfirmPassword" class="form-control" placeholder="Ingresa la confirmación de contraseña" />

	</div>*@


	@*<div class="mb-3">
		<label asp-for="IdColaborador" class="form-label"></label>
		<select asp-for="IdColaborador" asp-items="Model.colaboradores" class="form-control"></select>

	</div>*@

	<div class="mb-3">
		<label asp-for="Rut" class="form-label"></label>
		<input asp-for="Rut" class="form-control" id="rut" name="rut" oninput="checkRut(this)"/>
		<span asp-validation-for="Rut" class="text-danger"></span>
	</div>


	<div class="mb-3">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<label asp-for="FechaNacimiento" class="form-label"></label>
		<input asp-for="FechaNacimiento" class="form-control" id="datepicker " type="date" value="01/01/2022 " required />
		<span asp-validation-for="FechaNacimiento" class="text-danger"></span>
	</div>

	<div class="mb-3">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<label asp-for="FechaContrato" class="form-label"></label>
		<input asp-for="FechaContrato" class="form-control" id="datepicker "  type="date" value="01/01/2022 " required />
		<span asp-validation-for="FechaContrato" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="TipoContrato" class="form-label"></label>
		<select asp-for="TipoContrato" asp-items="Model.tipocontratos" class="form-control" required></select>
		<span asp-validation-for="TipoContrato" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="IdPerfile" class="form-label"></label>
		<select asp-for="IdPerfile" asp-items="Model.perfiles" class="form-control" required></select>
		<span asp-validation-for="IdPerfile" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="IdProyecto" class="form-label"></label>
		<select asp-for="IdProyecto" asp-items="Model.proyectos" class="form-control" required></select>
		<span asp-validation-for="IdProyecto" class="text-danger"></span>
	</div>


	<div class="card">
		<div class="card-header">
		   <h3 class="card-title">Cuenta Bancaria</h3> 

		  <div class="card-tools">
			<button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
			  <i class="fas fa-minus"></i>
			</button>
			<button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
			  <i class="fas fa-times"></i>
			</button>
		  </div>
		</div>
		</div>
	<button type="submit" class="btn btn-primary">Confirmar</button>
	@*<a class="btn btn-success" asp-action="Login">Login</a>*@

	<a class="btn btn-secondary" asp-action="Index">Cancelar</a>

	<script src="validarRUT.js"></script>
</form>

@section Scripts{
